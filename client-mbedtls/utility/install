
#!/bin/sh

rm -rf tmp

mkdir tmp
cd tmp

git clone https://github.com/oatpp/oatpp
cd oatpp
mkdir build && cd build
cmake ..
make install
cd ../../

git clone https://github.com/oatpp/oatpp-websocket
cd oatpp-websocket
mkdir build && cd build
cmake ..
make install
cd ../../

git clone https://github.com/oatpp/oatpp-mbedtls
cd oatpp-mbedtls
mkdir build && cd build
cmake ..
make install
cd ../../

git clone -b 'mbedtls-2.16.1' --single-branch --depth 1 --recurse-submodules https://github.com/ARMmbed/mbedtls
cd mbedtls
mkdir build && cd build

cmake ..
make install

cd ../../../
